<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/bg">
    <Button
            android:text="What's The Weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/myBtn"
            app:layout_constraintHorizontal_bias="0.498" android:onClick="lookUpWeather"
            app:layout_constraintTop_toBottomOf="@id/myEditText" android:layout_marginTop="15dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/myEditText" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/myBtn" android:hint="Enter A City"/>
    <TextView
            android:text="Enter A City..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/myTextView"
            android:layout_marginBottom="30dp" app:layout_constraintBottom_toTopOf="@+id/myEditText"
            android:textSize="36sp" android:textColor="@android:color/background_light"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="80dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:id="@+id/myEditMultiLine"
            android:layout_marginTop="37dp" app:layout_constraintTop_toBottomOf="@+id/myBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>